from django.urls import path, include
from rest_framework.routers import DefaultRouter
from .views import SensorViewSet, SensorDataViewSet, AlertlogViewSet, ModeView, TestAuthView

router = DefaultRouter()
router.register(r'sensors', SensorViewSet)
router.register(r'sensor-data', SensorDataViewSet)
router.register(r'alerts', AlertlogViewSet)

urlpatterns = [
    path('', include(router.urls)),
    path('mode/', ModeView.as_view(), name='mode-set'),
    path('test-auth/', TestAuthView.as_view(), name='test-auth'),
]